@using Web.Models
@model IEnumerable<FullEmployeeViewModel>
@{
    ViewBag.Title = "Home Page";
}

<h2>Our employees</h2>


<table class="table">
    <tr>
        <th>
            N
        </th>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Experience (years)
        </th>
        <th>
            Payment Number
        </th>
        <th>
            Department
        </th>
        <th>
            Position
        </th>
        <th>
            Projects
        </th>
    </tr>


    @foreach (FullEmployeeViewModel item in Model)
    {
        <tr>
            <td>
                @item.EmployeeId
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Experience
            </td>
            <td>
                @item.PaymentNum
            </td>
            <td>
                @item.DepartmentName
            </td>
            <td>
                @item.Position
            </td>
            <td>
                @Html.ActionLink("Click", "EmployeesProjects", new { id = item.EmployeeId })
            </td>
        </tr>

    }

</table>

